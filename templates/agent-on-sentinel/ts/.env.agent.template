# Environment configuration for the agent/sentinel
# Copy this file to .env.agent and customize as needed.

# ─── Sentinel Configuration ───────────────────────────────────────────────────
# Port for all sentinel listeners
FAME_LISTENER_PORT=8000

# ─── Logging ──────────────────────────────────────────────────────────────────
# Log level: debug, info, warn, error
FAME_LOG_LEVEL=info

# Show envelope traffic (useful for debugging)
FAME_SHOW_ENVELOPES=false
